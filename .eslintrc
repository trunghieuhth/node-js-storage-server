{
  "extends": [
    "eslint:recommended",
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "jest": true,
    "mocha": true,
    "es6": true
  },
  "rules": {
    "space-before-function-paren": [
      2,
      {
        "anonymous": "always",
        "named": "never"
      }
    ],
    "consistent-return": 0,
    "no-shadow": 0,
    "no-underscore-dangle": 0,
    "no-param-reassign": 0
  }
}
